<h1>Balance: {{data.budget}} </h1>
{{#each data.user.entries}}
  <p>{{this.date}} </p>
  <p>{{this.amount}} </p>
  <p>{{this.category}} </p>
  <p>{{this.location}} </p>
  <p>{{this.type}} </p>

  <button class='btn'><a href='/edit-entry/{{_id}}'> Edit entry</a> </button>
  <button class='btn'><a href='/delete-entry/{{_id}}'> Delete entry</a>
  </button>

{{/each}}

<h3>User info</h3>
<p>{{this.data.user}}</p>
<p>{{this.data.budget}}</p>
<p>{{this.data.income}}</p>
<p>{{this.data.expense}}</p>

