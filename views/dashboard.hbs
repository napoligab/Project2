       </div>
       <div> --}}


     </div>

    <div class="cards">
    
    {{#each data.entries}}
      
<div class="card w-96 bg-base-100 shadow-xl">
  <div class="card-body">
    <h2 class="card-title"></h2>
    <p><b>Date:</b> {{this.date}} </p>
      <p><b>Amount:</b> {{this.amount}}€ </p>
      <p><b>Category:</b> {{this.category}} </p>
      <p><b>Location:</b> {{this.location}} </p>
      <p><b>Type:</b> {{this.type}} </p>
     <div class="btn-group">
        <button class='btn btn-active'><a href='/edit-entry/{{_id}}'> Edit entry</a></button>
        <button class='btn'><a href='/delete-entry/{{_id}}'> Delete entry</a></button>
      </div>
  </div>
</div>
       
    {{/each}}

    </div>
